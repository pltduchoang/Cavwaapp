@model IEnumerable<CAVWAApp.Models.AppEvent>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="flex-row" style="margin:10px">
    @foreach (var item in Model)
    {
        <div class="card" style="width:50%">
            <div class="card-img" style="background-image:url('@item.ImageUrl)')">
                <div class="card-body">
                    <h2 class="card-title">@Html.DisplayFor(modelItem =>item.Title)</h2>
                    <h6>Created on: @Html.DisplayFor(modelItem => item.DateCreated) | Last Update: @Html.DisplayFor(modelItem=>item.DateUpdated)</h6>
                    <h6>By: @Html.DisplayFor(modelItem=>item.Author)</h6>
                    <p class="card-subtitle">
                        @Html.DisplayFor(modelItem =>item.Description)
                    </p>
                    <hr>
                    <p>
                        @Html.DisplayFor(modelItem =>item.Content)
                    </p>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
